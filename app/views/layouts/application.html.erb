  <body id="page1">
    <div id="main">
      <!-- HEADER -->
      <div id="header">
        <div class="row-1">
          <div class="fleft"><a href="/"><img src="/images/logo.gif" alt="" /></a></div>
          <div class="fright">
            <ul>
              <li><h3><%= link_to("Administrar Usuários","/useres") if (logged_in? and current_user.login=="admin") %></h3></li>
              <li><h3><%= logged_in? ? link_to("Sair","/logout") : link_to("Entrar","/sessiom/new")  %></h3></li>
            </ul>
          </div>
        </div>
        <% if logged_in? %>
          <div class="row-2">

            <div class="left">
              <ul>    <!-- COLOCAR CLASSE class="active" -->
                <li><a href="/"><span>Home</span></a></li>
                <li><a href="/ouvintes"><span>Ouvintes</span></a></li>
